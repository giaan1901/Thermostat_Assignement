#include "main.h"
#include "adc.h"
#include "i2c.h"
#include "gpio.h"

#include "app_button.h"      // uses BSP_Button_Read()
#include "app_display.h"     // LCD display layer (ShowTemp, ShowFan)
#include "app_controller.h"  // state machine (POWER, RUN, SET mode)

// -------------------
// Simulated Temperature
// -------------------
static int fakeTemp = 25;
static int tempDirection = 1;   // +1 or -1 (to bounce back and forth)
int currentTemp_fake_override = -999;

// Replace this in controller logic later. For now:
// Return fake room temperature instead of LM35 ADC
int SIM_Temp_Read(void)
{
    // Make temperature move between 20°C → 30°C
    fakeTemp += tempDirection;

    if (fakeTemp >= 30) tempDirection = -1;
    if (fakeTemp <= 20) tempDirection = 1;

    return fakeTemp;
}

void SystemClock_Config(void);

int main(void)
{
    HAL_Init();
    SystemClock_Config();
    MX_GPIO_Init();
    MX_I2C1_Init();   // required for LCD
    MX_ADC1_Init();   // not used, but safe to keep

    // ------------- Initialize APP layers -------------
    APP_Buttons_Init();
    APP_Display_Init();
    APP_Controller_Init();

    uint32_t lastBtn = 0;
    uint32_t lastCtrl = 0;

    while (1)
    {
        uint32_t now = HAL_GetTick();

        // ---- 20ms button scanning ----
        if (now - lastBtn >= 20)
        {
            lastBtn = now;
            APP_Buttons_Update();
        }

        // ---- 500ms controller update ----
        if (now - lastCtrl >= 500)
        {
            lastCtrl = now;

            // Inject fake temperature into display system
            // NOTE: Overwrite LM35 reading by modifying currentTemp globally
            extern int currentTemp_fake_override;
            currentTemp_fake_override = SIM_Temp_Read();

            APP_Controller_Update();
        }
    }
}

